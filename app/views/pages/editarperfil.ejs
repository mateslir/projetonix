                      <input type="text" name="usuar" id="usuar" placeholder="Nome" value="<%= valores.autenticado.autenticado%>" class="<%= avisoErro.autenticado.autenticado%>" 
                      <span> <%= msgErro.nome_usu %> </span> <b>*</b>
                  </p>

                  <p>
                      <input type="submit" value="Alterar dados perfil" />
                  </p>
              </form>

          </div>

      </main>
